{
  "name": "fantasy-comet",
  "version": "1.5.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "cross-env BUILD_DATE=%npm_config_build_date% vite build && copyfiles -f preload.js dist/",
    "prebuild": "node -e \"console.log('build_date=' + new Date().toISOString().slice(0,7).replace('-','.'))\" > .npmrc",
    "start": "electron .",
    "dev:app": "npm run build && npm start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A sleek and modern Constelia companion app built with Electron and React",
  "dependencies": {
    "@bbob/parser": "^4.2.0",
    "@bbob/preset-react": "^4.2.0",
    "@bbob/react": "^4.2.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.0.18",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "dompurify": "^3.2.4",
    "electron-updater": "^6.3.9",
    "framer-motion": "^10.12.16",
    "postcss": "^8.4.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.1",
    "tailwindcss": "^3.3.2",
    "vite": "^4.3.9"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^24.3.0",
    "electron-builder": "^25.1.8",
    "cross-env": "^7.0.3"
  },
  "build": {
    "appId": "com.luinbytes.fantasycomet",
    "productName": "Fantasy Comet",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
